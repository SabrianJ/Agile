<%- include("topBar") -%>

<!-- Content Column -->
<div class="col-lg-12 mb-4">

  <!-- Project Card Example -->
  <div class="card shadow mb-4">
    <div class="card-header py-3">
      <h6 class="m-0 font-weight-bold text-primary"><%= foundUser[0].username %></h6>
    </div>
    <div class="card-body">

      <h4 class="small font-weight-bold">Hello, my name is <%= foundUser[0].name %></h4>
      <h4 class="small font-weight-bold">You can contact me via <%= foundUser[0].email %></h4>
      <h4 class="small font-weight-bold">My suburb is <%= foundUser[0].suburb %></h4>

      <br/>
      <br/>

      <%  for(var j=1 ; j <= dog.length ; j++){ %>
      <%    var special = ['zeroth','first', 'second', 'third', 'fourth', 'fifth', 'sixth', 'seventh', 'eighth', 'ninth', 'tenth', 'eleventh', 'twelvth', 'thirteenth', 'fourteenth', 'fifteenth', 'sixteenth', 'seventeenth', 'eighteenth', 'nineteenth']; %>
      <%    var deca = ['twent', 'thirt', 'fourt', 'fift', 'sixt', 'sevent', 'eight', 'ninet']; %>

      <%    function stringifyNumber(n) { %>
      <%      if (n < 20) return special[n]; %>
      <%      if (n%10 === 0) return deca[Math.floor(n/10)-2] + 'ieth'; %>
      <%      return deca[Math.floor(n/10)-2] + 'y-' + special[n%10];%>
      <%      }%>

      <h4 class="small font-weight-bold">My <%= stringifyNumber(j) %> dog name is  <%= dog[j-1].name %></h4>
      <h4 class="small font-weight-bold">It is a <%= dog[j-1].size %> <%= dog[j-1].breed %> that has a
        weight of <%= dog[j-1].weight %> kg</h4>
      <h4 class="small font-weight-bold">Its age is <%= dogAges[j-1] %> years old</h4>
      <br />
      <img id="output1" class="dogImage" src="https://res.cloudinary.com/woof2021/image/upload/dogsImage/<%- dog[j-1]._id %>"/>
      <br /><br />

   <%  } %>
    </div>
  </div>



</div>


<%- include("bottomBar") -%>
