<%- include("topBar") -%>

<!-- Content Column -->
<div class="col-lg-12 mb-4">

  <!-- Project Card Example -->
  <div class="card shadow mb-4">
    <div class="card-header py-3">
      <h6 class="m-0 font-weight-bold text-primary">Change Picture</h6>
    </div>
    <div class="card-body">
      <form name="changePicture" action="/changePicture" method="POST" autocomplete="off" required>

        <input type="text" style="display:none;" class="form-control" id="imageURI"  name="imageURI" value="">
        <div class="form-group">
          <label for="profileImage" class="form-label">Please upload your new  image if you want to change current profile image</label>
        </div>
        <div class="form-group">
          <input type="file" class="form-input" id="image" name="image" onchange="loadPicture(event)"/>


        </div>

        <div class="form-group">
          <img id="profileImage" class="profileImage" src="https://res.cloudinary.com/woof2021/image/upload/profilesImage/<%- user._id %>.png" alt="No image given" onerror="alternateImage(event)"/>
        </div>


        <button type="submit" class="btn btn-primary">Save</button>
        <a class="btn btn-outline-primary" href="/" role="button">Cancel</a>

      </form>






</div>
  </div>
</div>

<script src="/index.js" charset="utf-8"></script>
<%- include("bottomBar") -%>
