<%- include("topBar") -%>

                <!-- Begin Page Content -->
                <div class="container-fluid">

                    <!-- Page Heading -->
                    <form action="/changePassword" method="POST" autocomplete="off">
                      <div class="form-group">
                        <label for="exampleInputPassword1">Old Password</label>
                        <input type="password" class="form-control" id="exampleInputPassword1" placeholder=" Old Password" name="oldPassword">
                        <label for="exampleInputPassword2">New Password</label>
                        <input type="password" class="form-control" id="exampleInputPassword2" placeholder="New Password" name="newPassword">
                      </div>

                      <% if(success != null){ %>
                        <% if(!success){ %>
                          <p>Wrong password</p>
                        <% }else{ %>
                          <p>Password Changed Successfully</p>
                        <% } %>
                      <% } %>



                      <button type="submit" class="btn btn-primary">Change Password</button>
                      <a class="btn btn-outline-primary" href="/" role="button">Cancel</a>
                    </form>


                </div>
                <!-- /.container-fluid -->

<%- include("bottomBar") -%>
