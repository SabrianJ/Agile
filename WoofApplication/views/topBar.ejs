<%- include("header") -%>

<!-- Page Wrapper -->
    <div id="wrapper">

        <!-- Sidebar -->
        <ul class="navbar-nav bg-gradient-primary sidebar sidebar-dark accordion" id="accordionSidebar">

            <!-- Sidebar - Brand -->
            <a class="sidebar-brand d-flex align-items-center justify-content-center" href="/">
                <div class="sidebar-brand-icon rotate-n-15">
                    <i class="fas fa-dog"></i>
                </div>
                <div class="sidebar-brand-text mx-3">Woof</div>
            </a>

            <!-- Divider -->
            <hr class="sidebar-divider my-0">

            <!-- Nav Item - Dashboard -->
            <li class="nav-item active">
                <a class="nav-link" href="/">
                    <i class="fas fa-fw fa-tachometer-alt"></i>
                    <span>Dashboard</span></a>
            </li>

            <!-- Divider -->
            <hr class="sidebar-divider">

            <!-- Heading -->
            <div class="sidebar-heading">
                All Users
            </div>

            <!-- Nav Item - Pages Collapse Menu -->
            <li class="nav-item">
                <a class="nav-link collapsed" href="#" data-toggle="collapse" data-target="#collapseTwo"
                    aria-expanded="true" aria-controls="collapseTwo">
                    <i class="fas fa-fw fa-blind"></i>
                    <span>Dog Owners</span>
                </a>
                <div id="collapseTwo" class="collapse" aria-labelledby="headingTwo" data-parent="#accordionSidebar">
                    <div class="bg-white py-2 collapse-inner rounded">
                        <h6 class="collapse-header">Dog Owners:</h6>
                        <a class="collapse-item" href="/dogOwners">List Dog Owners</a>
                    </div>
                </div>
            </li>

            <!-- Nav Item - Utilities Collapse Menu -->
            <li class="nav-item">
                <a class="nav-link collapsed" href="#" data-toggle="collapse" data-target="#collapseUtilities"
                    aria-expanded="true" aria-controls="collapseUtilities">
                    <i class="fas fa-fw fa-user-graduate"></i>
                    <span>Trainers</span>
                </a>
                <div id="collapseUtilities" class="collapse" aria-labelledby="headingUtilities"
                    data-parent="#accordionSidebar">
                    <div class="bg-white py-2 collapse-inner rounded">
                        <h6 class="collapse-header">Trainers:</h6>
                        <a class="collapse-item" href="/trainers">List Trainers</a>
                    </div>
                </div>
            </li>

            <hr class="sidebar-divider">

            <% if(user.type === "Dog Owner"){ %>
              <li class="nav-item">
                  <a class="nav-link collapsed" href="#" data-toggle="collapse" data-target="#collapseGroup"
                      aria-expanded="true" aria-controls="collapseAccount">
                      <i class="fas fa-fw fa-users"></i>
                      <span>Group</span>
                  </a>
                  <div id="collapseGroup" class="collapse" aria-labelledby="headingAccount"
                      data-parent="#accordionSidebar">
                      <div class="bg-white py-2 collapse-inner rounded">
                          <h6 class="collapse-header">Group :</h6>
                          <a class="collapse-item" href="/createGroup">Create Group</a>
                      </div>
                  </div>
              </li>


              <hr class="sidebar-divider">

              <li class="nav-item">
                  <a class="nav-link collapsed" href="#" data-toggle="collapse" data-target="#collapseAccount"
                      aria-expanded="true" aria-controls="collapseAccount">
                      <i class="fas fa-fw fa-walking"></i>
                      <span>Activity</span>
                  </a>
                  <div id="collapseAccount" class="collapse" aria-labelledby="headingAccount"
                      data-parent="#accordionSidebar">
                      <div class="bg-white py-2 collapse-inner rounded">
                          <h6 class="collapse-header">Activity :</h6>
                          <a class="collapse-item" href="/createActivity">Create Activity</a>
                      </div>
                  </div>
              </li>

              <!-- Divider -->
              <hr class="sidebar-divider d-none d-md-block">

          <%  }else{ %>
            <li class="nav-item">
                <a class="nav-link collapsed" href="#" data-toggle="collapse" data-target="#collapseTraining"
                    aria-expanded="true" aria-controls="collapseAccount">
                    <i class="fas fa-fw fa-chalkboard-teacher"></i>
                    <span>Training</span>
                </a>
                <div id="collapseTraining" class="collapse" aria-labelledby="headingAccount"
                    data-parent="#accordionSidebar">
                    <div class="bg-white py-2 collapse-inner rounded">
                        <h6 class="collapse-header">Training :</h6>
                        <a class="collapse-item" href="/createTraining">Create Training</a>
                    </div>
                </div>
            </li>


            <hr class="sidebar-divider">

            <li class="nav-item">
                <a class="nav-link collapsed" href="#" data-toggle="collapse" data-target="#collapseEvent"
                    aria-expanded="true" aria-controls="collapseAccount">
                    <i class="fas fa-fw fa-handshake"></i>
                    <span>Event</span>
                </a>
                <div id="collapseEvent" class="collapse" aria-labelledby="headingAccount"
                    data-parent="#accordionSidebar">
                    <div class="bg-white py-2 collapse-inner rounded">
                        <h6 class="collapse-header">Event :</h6>
                        <a class="collapse-item" href="/createEvent">Create Event</a>
                    </div>
                </div>
            </li>


            <hr class="sidebar-divider">
          <%  } %>



            <!-- Sidebar Toggler (Sidebar) -->
            <div class="text-center d-none d-md-inline">
                <button class="rounded-circle border-0" id="sidebarToggle"></button>
            </div>

            <!-- Sidebar Message -->
            <div class="sidebar-card d-none d-lg-flex">
                <img class="sidebar-card-illustration mb-2" src="/img/undraw_dog_man.svg" alt="...">
                <% if(user.type === "Dog Owner"){ %>
                  <p class="text-center mb-2"><strong>Woof</strong> is the new way to connect your dog !</p>
              <%  }else if(user.type === "Trainer"){ %>
                  <p class="text-center mb-2"><strong>Woof</strong> is the new way to connect your client !</p>
              <%   } %>



            </div>

        </ul>
        <!-- End of Sidebar -->

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

                <!-- Topbar -->
                <nav class="navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow">

                    <!-- Sidebar Toggle (Topbar) -->
                    <button id="sidebarToggleTop" class="btn btn-link d-md-none rounded-circle mr-3">
                        <i class="fa fa-bars"></i>
                    </button>

                    <ul class="navbar-nav ml-auto">

                    <!-- Topbar Search -->
                    <form
                        class="d-none d-sm-inline-block form-inline mr-auto ml-md-3 my-2 my-md-0 mw-100 navbar-search">

                    </form>

                    <!-- Nav Item - Messages -->
                        <li class="nav-item dropdown no-arrow mx-1">
                            <a class="nav-link dropdown-toggle" href="#" id="messagesDropdown" role="button"
                                data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <i class="fas fa-envelope fa-fw"></i>
                                <!-- Counter - Messages -->
                                <span class="badge badge-danger badge-counter"><%= foundInvitation.length %></span>
                            </a>
                            <!-- Dropdown - Messages -->
                            <div class="dropdown-list dropdown-menu dropdown-menu-right shadow animated--grow-in"
                                aria-labelledby="messagesDropdown" style="overflow-y: auto;">
                                <h6 class="dropdown-header">
                                    Invitation Center
                                </h6>

                            <%    for(var i=0 ; i < foundInvitation.length ; i++){ %>

                                  <a class="dropdown-item d-flex align-items-center" href="#">
                                      <div class="font-weight-bold">
                                          <div >
                                            <%= foundInvitation[i].message %>
                                        </div>
                                        <div style="padding-left: 180px;">
                                        <i class="far fa-check-circle fa-3x" onclick="joinInvitation(event,'<%= foundInvitation[i].id %>','<%= foundInvitation[i].type%>')" ></i>
                                          <i class="far fa-times-circle fa-3x" onclick="deleteInvitation(event,'<%= foundInvitation[i].id %>')"></i>
                                        </div>

                                          <div class="small text-gray-500"><%= foundInvitation[i].name %> - <%= foundInvitation[i].type %></div>
                                      </div>
                                  </a>




                            <%    } %>



                            </div>
                        </li>

                        <div class="topbar-divider d-none d-sm-block"></div>

                        <!-- Nav Item - User Information -->
                        <li class="nav-item dropdown no-arrow">
                            <a class="dropdown-toggle nav-link" href="#" id="userDropdown" role="button"
                                data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <span class="mr-2 d-none d-lg-inline text-gray-800 small"><%=user.username%></span>
                                <img class="img-profile rounded-circle"
                                    src="https://res.cloudinary.com/woof2021/image/upload/profilesImage/<%-user._id%>.png" alt="No image given" onerror="alternateImage(event)">
                            </a>
                            <!-- Dropdown - User Information -->
                            <div class="dropdown-menu dropdown-menu-right shadow animated--grow-in"
                                aria-labelledby="userDropdown">
                                <a class="dropdown-item" href="/updateProfile">
                                    <i class="fas fa-user fa-sm fa-fw mr-2 text-gray-400"></i>
                                    Profile
                                </a>
                                <a class="dropdown-item" href="/changePicture">
                                    <i class="fas fa-images fa-sm fa-fw mr-2 text-gray-400"></i>
                                    Change Picture
                                </a>
                                <a class="dropdown-item" href="/changePassword">
                                    <i class="fas fa-key fa-sm fa-fw mr-2 text-gray-400"></i>
                                    Change Password
                                </a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" href="#" data-toggle="modal" data-target="#logoutModal">
                                    <i class="fas fa-sign-out-alt fa-sm fa-fw mr-2 text-gray-400"></i>
                                    Logout
                                </a>
                            </div>
                        </li>

                    </ul>

                </nav>
                <!-- End of Topbar -->
