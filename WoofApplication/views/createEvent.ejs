  <!-- Project Card Example -->
  <div class="card shadow mb-4">
    <div class="card-header py-3">
      <h6 class="m-0 font-weight-bold text-primary">Create Event</h6>
    </div>
      <form name="eventForm" action="/createEvent" method="POST" autocomplete="off" onsubmit="return validateCreateForm('event')" required>
        <div class="card-body">
          <div class="form-group">
            <label for="addressInput">Location</label>
            <input type="text" class="form-control" id="addressInput" style="width:80%" placeholder="Search Address" name="address">
          </div>

