<%- include("topBar") -%>

<!-- Content Column -->
<div class="col-lg-12 mb-4">

  <!-- Project Card Example -->
  <div class="card shadow mb-4">
    <div class="card-header py-3">
      <h6 class="m-0 font-weight-bold text-primary"><%= foundUser[0].username %></h6>
    </div>
    <div class="card-body">

      <img id="profileImage" class="rounded-corners" src="https://res.cloudinary.com/woof2021/image/upload/profilesImage/<%- foundUser[0]._id %>.png" alt="No image given" onerror="alternateImage(event)"/>

      <h4 id="profile" class="small font-weight-bold">Hello, my name is <%= foundUser[0].name %></h4>
      <h4 class="small font-weight-bold">You can contact me via <%= foundUser[0].email %></h4>
      <h4 class="small font-weight-bold">My city is <%= foundUser[0].city %> and my suburb is <%= foundUser[0].suburb %></h4><br/>
      <h4 class="small font-weight-bold">My dog preferences is
        <%  for(var i=0; i < foundUser[0].preference.length ; i++){ %>
            <%= foundUser[0].preference[i] %> ,
        <% } %>
      </h4><br/>
    </div>
  </div>



</div>


<%- include("bottomBar") -%>
