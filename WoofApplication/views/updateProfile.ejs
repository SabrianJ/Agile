<%- include("topBar") -%>

                <!-- Begin Page Content -->
                <div class="container-fluid">

                    <!-- Page Heading -->
                    <form action="/updateProfile" method="POST" autocomplete="off">
                      <div class="form-group">

                        <div class="form-group">
                          <label for="NameInput">Name</label>
                          <input type="text" class="form-control" id="NameInput" style="width:80%" placeholder="<%- user.name %>" name="name" value="<%- user.name %>">

                        </div>

                        <label for="exampleInputEmail1">Email address</label>
                        <input type="email" class="form-control" id="exampleInputEmail1" style="width:80%" aria-describedby="emailHelp" placeholder="<%- user.email %>" name="emailAddress" value="<%- user.email %>">
                        <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
                      </div>

                      <div class="form-group">
                        <label for="addressInput">Address</label>
                        <input type="text" class="form-control" id="addressInput" style="width:80%" placeholder="<%- user.address %>" name="address" value="<%- user.address %>">
                      </div>

                      <div class="form-group">
                        <label for="cityInput">City</label>
                        <select id="cityInput" name="city" onchange="suburbSelection(this.options[this.selectedIndex].value)" style="width:25%" class="form-control" placeholder="<%- user.city %>" value="<%- user.city %>">
                          <option disabled selected value="<%- user.city %>"> <%= user.city %> </option>
                      <option  value="Auckland">Auckland</option>
                      <option  value="Wellington">Wellington</option>
                      <option value="Christchurch">Christchurch</option>
                    </select>
                      </div>
                      <div class="form-group">
                        <label for="suburbInput">Suburb</label>
                        <select id="suburbInput" name="suburb"  class="form-control" style="width:25%" value="<%- user.suburb %>" placeholder="<%- user.suburb %>">
                          <option disabled selected value="<%- user.suburb %>"> <%= user.suburb %> </option>
                        </select>
                      </div>


                    <%   if(user.type === "Dog Owner"){ %>
                        <div class="form-group">
                          <label for="dogName">Dog's Name</label>
                          <input type="text" class="form-control" id="dogName" style="width:80%" placeholder="<%- dogs[0].name %>" name="dogsName" value="<%- dogs[0].name %>">
                          <label for="dogsBreed">Breed</label>
                          <select id="dogBreed" name="dogsBreed" class="form-control" style="width:25%" placeholder="Breed" style="width:25%" placeholder="<%- dogs[0].breed %>">
                            <option disabled selected value="<%- dogs[0].breed %>"> <%= dogs[0].breed %> </option>
                            <option value="German Shepherd" selected>German Shepherd</option>
                            <option value="Akita">Akita</option>
                            <option value="Shih Tzu">Shih Tzu</option>
                          </select>


                          <% if(dogs[0].size === "small"){ %>
                            <div class="radioButton" style="margin-top:10px; margin-bottom:10px;">
                              <label>Dog's Size : </label>
                              <label><input style="margin-left:10px;" type="radio" name="dogsSize" value="small" checked="checked">Small</label>
                              <label><input style="margin-left:10px;" type="radio" name="dogsSize" value="medium">Medium</label>
                              <label><input style="margin-left:10px;" type="radio" name="dogsSize" value="big">Big</label>
                            </div>
                        <%  }else if(dogs[0].size === "medium"){ %>
                            <div class="radioButton" style="margin-top:10px; margin-bottom:10px;">
                              <label>Dog's Size : </label>
                              <label><input style="margin-left:10px;" type="radio" name="dogsSize" value="small">Small</label>
                              <label><input style="margin-left:10px;" type="radio" name="dogsSize" value="medium" checked="checked">Medium</label>
                              <label><input style="margin-left:10px;" type="radio" name="dogsSize" value="big">Big</label>
                            </div>
                          <% }else{ %>
                            <div class="radioButton" style="margin-top:10px; margin-bottom:10px;">
                              <label>Dog's Size : </label>
                              <label><input style="margin-left:10px;" type="radio" name="dogsSize" value="small">Small</label>
                              <label><input style="margin-left:10px;" type="radio" name="dogsSize" value="medium">Medium</label>
                              <label><input style="margin-left:10px;" type="radio" name="dogsSize" value="big" checked="checked">Big</label>
                            </div>
                          <%}%>

                          <label for="dogWeight">Dog's Weight</label>
                          <input type="text" class="form-control" id="dogWeight" placeholder="Weight = <%- dogs[0].weight %>" style="width:25%" name="dogsWeight" value="<%- dogs[0].weight %>">
                          <label for="dogAge">Dog's date of birth</label>
                          <input type="date" class="form-control" id="dogsDateOfBirth" placeholder="<%- dogsDOB %>" style="width:25%" name="dogsDateOfBirth" value="<%- dogsDOB %>">
                        </div>
                    <%   } %>


                      <% if(success != null){ %>
                        <% if(!success){ %>
                          <p>Error updating fields</p>
                        <% }else{ %>
                          <p>Fields updated Successfully</p>
                        <% } %>
                      <% } %>

                      <button type="submit" class="btn btn-primary">Update</button>
                      <a class="btn btn-outline-primary" href="/" role="button">Cancel</a>
                    </form>


                </div>
                <script src="/index.js" charset="utf-8"></script>
                <!-- /.container-fluid -->
<%- include("bottomBar") -%>
