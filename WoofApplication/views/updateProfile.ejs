<%- include("topBar") -%>

                <!-- Begin Page Content -->
                <div class="container-fluid">

                    <!-- Page Heading -->
                    <form action="/updateProfile" method="POST">
                      <div class="form-group">

                        <div class="form-group">
                          <label for="NameInput">Name</label>
                          <input type="text" class="form-control" id="NameInput" placeholder="<%- user.name %>" name="name" value="<%- user.name %>">

                        </div>

                        <label for="exampleInputEmail1">Email address</label>
                        <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="<%- user.email %>" name="emailAddress" value="<%- user.email %>">
                        <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
                      </div>

                      <div class="form-group">
                        <label for="addressInput">Address</label>
                        <input type="text" class="form-control" id="addressInput" placeholder="<%- user.address %>" name="address" value="<%- user.address %>">
                      </div>
                      <div class="form-group">
                        <label for="dogName">Dog</label>
                        <input type="text" class="form-control" id="dogName" placeholder="<%- user.dog[0].name %>" name="dogsName" value="<%- user.dog[0].name %>">
                        <input type="text" class="form-control" id="dogBreed" placeholder="<%- user.dog[0].breed %>" name="dogsBreed" value="<%- user.dog[0].breed %>">
                        <input type="text" class="form-control" id="dogSize" placeholder="Size = <%- user.dog[0].size %>" name="dogsSize" value="<%- user.dog[0].size %>">
                        <input type="text" class="form-control" id="dogWeight" placeholder="Weight = <%- user.dog[0].weight %>" name="dogsWeight" value="<%- user.dog[0].weight %>">
                        <input type="text" class="form-control" id="dogAge" placeholder="Age = <%- user.dog[0].age %>" name="dogsAge" value="<%- user.dog[0].age %>">
                      </div>

                      <% if(success != null){ %>
                        <% if(!success){ %>
                          <p>Error updating fields</p>
                        <% }else{ %>
                          <p>Fields updated Successfully</p>
                        <% } %>
                      <% } %>

                      <button type="submit" class="btn btn-primary">Update</button>
                      <a class="btn btn-outline-primary" href="/" role="button">Cancel</a>
                    </form>


                </div>
                <!-- /.container-fluid -->
<%- include("bottomBar") -%>
