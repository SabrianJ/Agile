<%- include("topBarMain") -%>
                <!-- Begin Page Content -->
                <div class="container-fluid">

                    <!-- Page Heading -->
                    <div class="d-sm-flex align-items-center justify-content-between mb-4">
                        <h1 class="h3 mb-0 text-gray-800">Dashboard</h1>
                    </div>

                    <div style="padding-bottom:20px;" class="col-lg-12">
                      <div id="calendar"></div>
                    </div>



                      <% if(user.type === "Dog Owner"){ %>
                        <div class="row">
                          <div class="col-lg-3">
                            <%- include("groupCard") -%>
                            <%- include("trainingCard") -%>
                          </div>
                          <div class="col-lg-3">
                            <%- include("activityCard") -%>
                            <%- include("reminderCard") -%>
                          </div>
                          <div class="col-6">
                            <div id="map" ></div>
                            <label id="distanceInfo"></label>
                          </div>

                        </div>

                    <%  }else{ %>
                        <div class="row">
                          <div class="col-lg-3">
                            <%- include("trainingCard") -%>
                            <%- include("reminderCard") -%>
                          </div>
                          <div class="col-lg-3">
                            <%- include("eventCard") -%>
                          </div>
                          <div class="col-6">
                            <div id="map" ></div>
                            <label id="distanceInfo"></label>
                          </div>
                        </div>

                  <%    } %>












                <input type="text"  style="display:none;" maxlength="30" id="address" style="width:80%" placeholder="<%- user.address %>" name="address" value="<%- user.address %>">

